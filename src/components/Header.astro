---
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import geohaus from "../assets/images/geohaus.svg";
---

<div x-data="{ showmenu: false }" class="md:p-4 fixed lg:static w-full text-neutral-950 z-10 top-0 bg-[#F8F5EF]">
  <div id="navbar" class="flex flex-row justify-end">
    <!-- <div id="logo" class="flex items-center text-sky-900 font-bold">
      <a href="#"><Image src={geohaus} alt="GeoHaus logo" class="w-1/3" /></a>
    </div> -->
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-4">
        <li class=""><Link href="#om">Om GeoHaus</Link></li>
        <li class=""><Link href="#inspo">Inspiration</Link></li>
      </ul>
    </nav>
    <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu"
      ><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-neutral-950">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>
  <nav id="mobilmenu" class="flex flex-col content-center flex-wrap py-16" x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
    <ul>
      <li class=""><Link href="#om">Om GeoHaus</Link></li>
      <li class=""><Link href="#inspo">Inspiration</Link></li>
    </ul>
  </nav>
</div>
